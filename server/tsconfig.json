{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@lib/neo4j": [
        "libs/neo4j/src"
      ],
      "@lib/neo4j/*": [
        "libs/neo4j/src/*"
      ],
      "lib/tencentcloud": [
        "libs/tencentcloud/src"
      ],
      "lib/tencentcloud/*": [
        "libs/tencentcloud/src/*"
      ]
    }
  }
}